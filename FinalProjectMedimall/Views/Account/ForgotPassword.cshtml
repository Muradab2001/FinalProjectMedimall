@model AccountVM
@{
    ViewData["Title"] = "ForgotPassword";
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css" integrity="sha512-KfkfwYDsLkIlwQp6LFnl8zNdLGxu9YAA1QvwINks4PhcElQSvqcyVLLD9aMhXd13uQjoXtEKNosOWaZqXgel0g==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="~/Assets/style/resetpassword.css">
    <title>resetpassword</title>
</head>
<body>



    <div class="alert alert-danger" asp-validation-summary="ModelOnly"> </div>
    <section class="login container">
        <h2>Forgot Password</h2>
        <form action="" method="post">
            <label>Enter your registered email to reset your password.</label>
            <input asp-for="AppUser.Email" type="text">
            <h5>New here? <a asp-controller="account" asp-action="register">Sign Up.</a></h5>
            <h5>Already have an account? <a asp-controller="account" asp-action="login">Sign In.</a></h5>
            <button class="btn mt-2" type="submit">Reset Password</button>
        </form>
    </section>
</body>
</html>


