@model AccountVM
@{
    ViewData["Title"] = "ResetPassword";
    Layout = null;
}



<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <title>resetpassword</title>
</head>
<body>

    <div  style="text-align:center;" class="justify-content-center">
        <img style="width:15rem;height:15rem; z-index:-1" src="~/admin/images/20944201.jpg"/>


        <form class="col-lg-4" method="post" style="display:flex;flex-direction:column;justify-content:center;margin:auto;">
            <h1>Reset Password</h1>
            <div>
                <label>Enter your new password</label><br />
                <input asp-for="Password" class="form-control" />
                <span class="text-warning text" asp-validation-for="Password"></span>

            </div>
            <div style="display:none;">
                <input asp-for="Token" class="form-control" />
                <input asp-for="AppUser.Email" class="form-control" />
            </div>
            <div>
                <label>Confirm your new password</label><br />
                <input asp-for="ConfirmPassword" class="form-control" />
                <span class="text-warning text" asp-validation-for="ConfirmPassword"></span>

            </div>
            <button type="submit" class="btn btn-outline-primary mt-3">Reset password</button>


        </form>
    </div>
</body>
</html>