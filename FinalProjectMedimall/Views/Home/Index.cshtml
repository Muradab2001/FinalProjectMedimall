                                </div>
                                <div class="productinfo">
                                    <a asp-controller="Medicine" asp-action="Detail" asp-route-id="@medicine.Id">@medicine.Name</a>
                                    <div class="starrating">
                                        @for (int i = 0; i < avg; i++)
