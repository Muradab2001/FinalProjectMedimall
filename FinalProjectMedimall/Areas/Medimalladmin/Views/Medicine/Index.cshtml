@model List<Medicine>
@{
    ViewData["Title"] = "Index";
}

<div class="main-panel">
    <div style="text-align: center">
        <a class="btn btn-success" asp-area="Medimalladmin" asp-controller="Medicine" asp-action="create">
            Create New Furniture
        </a>
    </div>
    @{
        if (TempData["FileName"] != null)
        {
            <div class="alert alert-danger">@TempData["FileName"]</div>
        }
    }

    <div class="table-responsive pt-3">
        <table class="table table-bordered" style="text-align: center">
            <thead class="table table-info" style="text-align: center">
                <tr>
                    <th>
                        Image
                    </th>
                    <th>
                        Name
                    </th>
                    <th>
                        SKU
                    </th>
                    <th>
                        Price
                    </th>
                    <th>
                        Weight
                    </th>
                    <th>
                        Settings
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (Medicine medicine in Model)
                {
                    <tr class="table-warning">
                        <td>
                            <img style="width:110px; height:110px"
                             src="~/assets/image/@medicine.Image" />
                        </td>
                        <td>
                            @medicine.Name
                        </td>
                        <td>
                            @medicine.SKU
                        </td>
                     
                        <td>
                            @medicine.Price
                        </td>
                  
                        <td>
                            @medicine.Weight
                        </td>
                        <td class="d-flex align-items-center" style="height:160px; justify-content: center; gap: 5px">
                            <div>
                                <a asp-area="Medimalladmin" asp-controller="Medicine" asp-action="Edit" asp-route-id="@medicine.Id"
                               class="btn btn-success"><i class="mdi mdi-border-color"></i></a>
                            </div>
                            <div>
                                <a asp-area="Medimalladmin" asp-controller="Medicine" asp-action="Delete" asp-route-id="@medicine.Id"
                               class="btn btn-danger"><i class="mdi mdi-delete"></i></a>
                            </div>
                            <div>
                                <a asp-area="Medimalladmin" asp-controller="Medicine" asp-action="Detail" asp-route-id="@medicine.Id"
                               class="btn btn-warning"><i class="mdi mdi-information"></i></a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
