@model List<About>
@{
    ViewData["Title"] = "Index";
}

<div class="main-panel">
    <div class="table-responsive pt-0">
        <table class="table table-bordered">
            <thead>
                <tr class="table-primary text-center">
                    <th> Image </th>
                    <th> Title </th>
                    <th> Desc </th>
                    <th> Setting </th>
                </tr>
            </thead>
            <tbody>
                @foreach (About about in Model)
                {
                    <tr style="background-color:#DFF8FF;" class="table-secondary text-center">
                        <td>
                            <img style="width:110px; height:110px" src="~/assets/image/@about.Image" />
                        </td>
                        <td>
                            @about.Title
                        </td>
                        <td>
                            @about.Desc
                        </td>
                        <td class="d-flex text-center" style="height:155px; gap: 5px;align-items: center; justify-content: center;">
                            <div>
                                <a asp-area="Medimalladmin" asp-controller="About" asp-action="Edit" asp-route-id="@about.Id"
                               class="btn "><img style="border-radius:0;" width="2rem" src="~/admin/images/edit (1).png" /></a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>