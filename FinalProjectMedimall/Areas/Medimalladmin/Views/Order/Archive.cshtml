@model List<Order>

<div class="main-panel">
    @{
        if (TempData["FileName"] != null)
        {
            <div class="alert alert-danger">@TempData["FileName"]</div>
        }
    }


    <div class="table-responsive pt-3">
        <table class="table table-bordered" style="text-align: center">
            <thead class="table table-info" style="text-align: center">
                <tr>
                    <th>
                        FullName
                    </th>
                    <th>
                        Date
                    </th>
                    <th>
                        Address
                    </th>
                    <th>
                        TotalPrice
                    </th>
                    <th>
                        Setting
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (Order order in Model.OrderByDescending(o => o.Status == false))
                {
                    @if (order.Archive == true)
                    {

                        <tr style="background:#00800061 ;" class="">
                                <td>
                                    @order.AppUser.FirstName
                                    @order.AppUser.LastName

                                </td>
                                <td>
                                    @order.Date
                                </td>

                                <td>
                                    @order.Country,
                                    @order.City,
                                    @order.Address

                                </td>

                                <td>
                                    @order.TotalPrice
                                </td>

                                <td class="d-flex align-items-center" style="height:160px; width:100%; justify-content: center; gap: 5px">
                                    <div>
                                    <a asp-area="Medimalladmin" asp-controller="Order" asp-action="Delete" asp-route-id="@order.Id"
                               class="btn btn-danger"><i class="mdi mdi-delete"></i></a>
                                    </div>
                               
                                    <div>
                                        <a asp-area="Medimalladmin" asp-controller="Order" asp-action="Detail" asp-route-id="@order.Id"
                               class="btn btn-warning"><i class="mdi mdi-information"></i></a>
                                    </div>
                           
                                </td>
                            </tr>
                        
                        
                    }
                }
            </tbody>
        </table>
    </div>
</div>