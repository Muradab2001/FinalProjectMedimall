@model Order
@{
    ViewData["Title"] = "Detail";
}
<div class="col-lg-9">
    <div class="btn-da">
        <h4 style="text-align:center; background-color:cornflowerblue; padding: 0.3rem;">Order</h4>
    </div>
    <hr />
    <dl class="row table table-warning">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Date)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Date)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Country)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Country)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.City)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.City)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Phone)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Phone)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TotalPrice)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TotalPrice)
        </dd>
    </dl>
    <div>
        <div class="table-responsive pt-3">
            <table class="table table-bordered" style="text-align: center">
                <thead class="table table-info" style="text-align: center">
                    <tr>
                        <th>
                            Image
                        </th>
                        <th>
                            Name
                        </th>
                        <th>
                            SKU
                        </th>
                        <th>
                            Price
                        </th>
                        <th>
                            Weight
                        </th>

                    </tr>
                </thead>
                <tbody>
        @foreach (OrderItem item in ViewBag.basketitem)
        {
            if (item.OrderId == Model.Id)
            {
       
                                <tr class="table-warning">
                                    <td>
                                        <img style="width:110px; height:110px"
                                 src="~/assets/image/@item.Medicine.Image" />
                                    </td>
                                    <td>
                                        @item.Medicine.Name
                                    </td>
                                    <td>
                                        @item.Medicine.SKU
                                    </td>

                                    <td>
                                        @item.Price
                                    </td>

                                    <td>
                                        @item.Medicine.Weight
                                    </td>
                                   
                                </tr>
                            
            }
        }
                        </tbody>
                    </table>
                </div>
    </div>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>