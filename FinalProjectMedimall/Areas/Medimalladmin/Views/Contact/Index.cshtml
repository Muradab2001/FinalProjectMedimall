@model List<Contact>
@{
    ViewData["Title"] = "Index";
}

<div class="main-panel">
    @{
        if (TempData["FileName"] != null)
        {
                <div class="alert alert-danger">@TempData["FileName"]</div>
        }
    }

    <div class="table-responsive pt-3">
        <table class="table table-bordered" style="text-align: center">
            <thead class="table table-info" style="text-align: center">
                <tr>
                    <th>
                        FullName
                    </th>
                    <th>
                        Subject
                    </th>
                    <th>
                        Email
                    </th>
                    <th>
                        Date
                    </th>
                    <th>
                        Settings
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (Contact contact in Model)
                {
                    <tr class="table-warning">
                        <td>
                            @contact.Name
                        </td>
                        <td>
                            @contact.Subject
                        </td>

                        <td>
                            @contact.Email
                        </td>

                        <td>
                            @contact.Date
                        </td>
                        <td class="d-flex align-items-center" style="height:160px; width:100%; justify-content: center; gap: 5px">
                            <div>
                                <a asp-area="Medimalladmin" asp-controller="Contact" asp-action="Delete" asp-route-id="@contact.Id"
                               class="btn btn-danger"><i class="mdi mdi-delete"></i></a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>