@model Discount
@{
    ViewData["Title"] = "Index";
}

<div class="main-panel">

    @{
        if (TempData["FileName"] != null)
        {
            <div class="alert alert-danger">@TempData["FileName"]</div>
        }
    }

    <div class="table-responsive pt-3">
        <table class="table table-bordered" style="text-align: center">
            <thead class="table table-info" style="text-align: center">
                <tr>
                    <th>
                        Image
                    </th>
                    <th>
                        Name
                    </th>
                    <th>
                        SKU
                    </th>
                    <th>
                        Price
                    </th>
                    <th>
                        Weight
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (Medicine medicine in ViewBag.Medicines)
                {
                   if (Model.Id==medicine.DiscountId)
                    {
                        <tr class="table-warning">
                            <td>
                                <img style="width:110px; height:110px"
                             src="~/assets/image/@medicine.Image" />
                            </td>
                            <td>
                                @medicine.Name
                            </td>
                            <td>
                                @medicine.SKU
                            </td>

                            <td>
                                <del> @medicine.Price</del>
                                <span>@((medicine.Discount.Percentage*medicine.Price/100).ToString("f0")) $</span>
                            </td>

                            <td>
                                @medicine.Weight
                            </td>

                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>