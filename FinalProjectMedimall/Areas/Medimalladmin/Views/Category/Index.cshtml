@model List<Category>
@{
    ViewData["Title"] = "Index";
}

<div class="main-panel">
    <div class="text-center btn-dark">
        <a class="btn btn-primary text-center " asp-area="Medimalladmin" asp-controller="slider" asp-action="create">
            Create New Slider
        </a>
    </div>
    <div class="table-responsive pt-0">
        <table class="table table-bordered">
            <thead>
                <tr class="table-primary text-center">
                    <th> Image </th>
                    <th> Title </th>
                    <th> Setting </th>
                </tr>
            </thead>
            <tbody>
                @foreach (Category category in Model)
                {
                    <tr style="background-color:#DFF8FF;" class="table-secondary text-center">
                        <td>
                            <img style="width:110px; height:110px" src="~/assets/image/@category.Image" />
                        </td>
                        <td>
                            @category.Name
                        </td>

                        <td class="d-flex align-items-center" style="height:160px; justify-content: center; gap: 5px">
                            <div>
                                <a asp-area="Medimalladmin" asp-controller="Category" asp-action="Edit" asp-route-id="@category.Id"
                               class="btn "><img style="border-radius:0;" width="2rem" src="~/admin/images/edit (1).png" /></a>
                            </div>
                            <div>
                                <a asp-area="Medimalladmin" asp-controller="Category" asp-action="Delete" asp-route-id="@category.Id"
                               class="btn "><img style="border-radius:0" width="2rem" src="~/admin/images/delete (1).png" /></a>
                            </div>
                            <div>
                                <a asp-area="Medimalladmin" asp-controller="Category" asp-action="Detail" asp-route-id="@category.Id"
                               class="btn "><img style="border-radius:0" width="2rem" src="~/admin/images/info (1).png" /></a>
                            </div>
                        </td>

                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="row justify-content-center mt-4">
        <nav aria-label="...">
            <ul class="pagination" style="justify-content:center">

                <li class="page-item @(ViewBag.Currentpage == 1 ? "disabled" : "")">
                    <a class="page-link" asp-controller="category" asp-action="index" asp-route-page="@(ViewBag.CurrentPage-1)">Previous</a>
                </li>

                @for (int i = 1; i <= ViewBag.TotalPage; i++)
                {
                    <li class="page-item  @(ViewBag.CurrentPage == i ? "active" : "")" style="pointer-events: @(ViewBag.CurrentPage == i ? "none" : "")"><a class="page-link" asp-controller="category" asp-action="index" asp-route-page="@i">@i</a></li>
                }

                <li class="page-item @(ViewBag.CurrentPage == ViewBag.TotalPage ? "disabled" : "")">
                    <a class="page-link" asp-controller="category" asp-action="index" asp-route-page="@(ViewBag.CurrentPage +1)">Next</a>
                </li>
            </ul>
        </nav>
    </div>
</div>