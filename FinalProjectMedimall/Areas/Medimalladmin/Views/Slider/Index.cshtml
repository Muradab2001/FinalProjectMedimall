@model List<Slider>
@{
    ViewData["Title"] = "Index";
}

<div class="main-panel">
    <div class="text-center btn-dark">
        <a class="btn btn-primary text-center " asp-area="Medimalladmin" asp-controller="slider" asp-action="create">
            Create New Slider
        </a>
    </div>
    <div class="table-responsive pt-0">
        <table class="table table-bordered">
            <thead>
                <tr class="table-primary text-center">
                    <th> Image </th>
                    <th> Title </th>
                    <th> Desc </th>
                    <th> Setting </th>
                </tr>
            </thead>
            <tbody>
                @foreach (Slider slider in Model)
                {
                    <tr style="background-color:#DFF8FF;" class="table-secondary text-center">
                        <td>
                            <img style="width:110px; height:110px" src="~/assets/image/@slider.Image" />
                        </td>
                        <td>
                            @slider.Title
                        </td>
                        <td>
                            @slider.Desc
                        </td>
         
                        <td class="d-flex align-items-center" style="height:160px; justify-content: center; gap: 5px">
                            <div>
                                <a asp-area="Medimalladmin" asp-controller="Slider" asp-action="Edit" asp-route-id="@slider.Id"
                               class="btn "><img style="border-radius:0;" width="2rem" src="~/admin/images/edit (1).png" /></a>
                            </div>
                            <div>
                                <a asp-area="Medimalladmin" asp-controller="Slider" asp-action="Delete" asp-route-id="@slider.Id"
                               class="btn "><img style="border-radius:0" width="2rem" src="~/admin/images/delete (1).png" /></a>
                            </div>
                            <div>
                                <a asp-area="Medimalladmin" asp-controller="Slider" asp-action="Detail" asp-route-id="@slider.Id"
                               class="btn "><img style="border-radius:0" width="2rem" src="~/admin/images/info (1).png" /></a>
                            </div>
                        </td>
       
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>